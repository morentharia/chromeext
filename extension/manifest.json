{
  "manifest_version": 2,
  "name": "virt",
  "description": "virt",
  "version": "1.0",
  "icons": {
    "128": "icon96.png",
    "32": "icon32.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js", "hot-reload.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
